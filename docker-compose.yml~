version: '3.3'
networks:
  backend:
  frontend:
services:
  mysql:
    image: mysql:5.7
    container_name: mysql-store-front
    ports:
      - '32768:3306'
    networks:
      - backend
    environment:
      - MYSQL_ROOT_PASSWORD=root
      - MYSQL_DATABASE=store-front
      - SERVICE_TAGS=dev
      - SERVICE_NAME=mysql
    volumes:
      - default-mysql:/data
      - ./mysql:/var/lib/mysql
  site:
    image: nginx:stable-alpine
    container_name: nginx-store-front
    ports:
      - "80:80"
    volumes:
      - ./:/var/www/html
      - ./nginx/default.conf:/etc/nginx/conf.d/default.conf
    depends_on:
      - php
      - mysql
    networks:
      - backend
      - frontend
  php:
    build:
      context: .
      dockerfile: php.dockerfile
    container_name: php-store-front
    volumes:
      - ./:/var/www/html
    ports:
      - "9000:9000"
    networks:
      - backend
  redis:
    image: redis:4.0
    container_name: store-front-queue
    volumes:
      - default-redis:/data
    ports:
      - 6379:6379

  npm:
    image: node:13.7
    container_name: npm-store-front
    volumes:
      - ./:/var/www/html
    working_dir: /var/www/html
    entrypoint: ['npm']

volumes:
  default-mysql:
    driver: local
  default-redis:
    driver: local